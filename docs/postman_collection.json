{
  "info": {
    "name": "Procure-to-Pay API",
    "description": "Complete API collection for Procure-to-Pay system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"staff1\",\n  \"email\": \"staff1@example.com\",\n  \"password\": \"password123\",\n  \"password_confirm\": \"password123\",\n  \"role\": \"staff\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["auth", "register", ""]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.access);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"staff1\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", ""]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me/",
              "host": ["{{base_url}}"],
              "path": ["auth", "me", ""]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/logout/",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Purchase Requests",
      "item": [
        {
          "name": "List Requests",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/requests/?status=pending&ordering=-created_at",
              "host": ["{{base_url}}"],
              "path": ["requests", ""],
              "query": [
                {
                  "key": "status",
                  "value": "pending"
                },
                {
                  "key": "ordering",
                  "value": "-created_at"
                }
              ]
            }
          }
        },
        {
          "name": "Get Request",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/requests/1/",
              "host": ["{{base_url}}"],
              "path": ["requests", "1", ""]
            }
          }
        },
        {
          "name": "Create Request",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Office Supplies",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Purchase office supplies for Q1",
                  "type": "text"
                },
                {
                  "key": "amount",
                  "value": "500.00",
                  "type": "text"
                },
                {
                  "key": "items",
                  "value": "[{\"item_name\": \"Paper\", \"quantity\": 10, \"price\": 50.00}]",
                  "type": "text"
                },
                {
                  "key": "proforma_file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/requests/",
              "host": ["{{base_url}}"],
              "path": ["requests", ""]
            }
          }
        },
        {
          "name": "Update Request",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"description\": \"Updated description\",\n  \"amount\": \"600.00\",\n  \"items\": [\n    {\n      \"item_name\": \"Paper\",\n      \"quantity\": 12,\n      \"price\": 50.00\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/requests/1/",
              "host": ["{{base_url}}"],
              "path": ["requests", "1", ""]
            }
          }
        },
        {
          "name": "Approve Request",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comment\": \"Approved - within budget\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/requests/1/approve/",
              "host": ["{{base_url}}"],
              "path": ["requests", "1", "approve", ""]
            }
          }
        },
        {
          "name": "Reject Request",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comment\": \"Rejected - exceeds budget\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/requests/1/reject/",
              "host": ["{{base_url}}"],
              "path": ["requests", "1", "reject", ""]
            }
          }
        },
        {
          "name": "Submit Receipt",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "receipt_file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/requests/1/submit-receipt/",
              "host": ["{{base_url}}"],
              "path": ["requests", "1", "submit-receipt", ""]
            }
          }
        },
        {
          "name": "Validate Receipt",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/requests/1/validate-receipt/",
              "host": ["{{base_url}}"],
              "path": ["requests", "1", "validate-receipt", ""]
            }
          }
        }
      ]
    }
  ]
}

